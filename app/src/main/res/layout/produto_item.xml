<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
    android:id="@+id/FotoProduto1"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/wig_gabriela"
    android:layout_margin="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/NomeProduto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wig Gabriela"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/FotoProduto1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/DescricaoProduto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pqppqppqpqpqpqpqppqpqqwsqÃ§mjfhsudoigvhfu"
        android:textSize="16sp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/NomeProduto1"
        app:layout_constraintStart_toEndOf="@id/FotoProduto1"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/PrecoProduto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 800,00"
        android:textSize="18sp"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/DescricaoProduto1"
        app:layout_constraintStart_toEndOf="@id/FotoProduto1"/>


</androidx.constraintlayout.widget.ConstraintLayout>